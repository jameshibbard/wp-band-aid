{
  "manifest_version": 2,

  "name": "WP Band Aid",
  "description": "This extension is for internal use at SitePoint. It makes using the WP back end a bit easier.",
  "version": "0.13.1",

  "background": {
    "scripts": [
      "fancy-settings/source/lib/store.js",
      "lib/jquery-2.1.1.min.js",
      "scripts/background.js"
    ]
  },

  "page_action": {
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    },
    "default_title": "WP Band Aid"
  },

  "permissions": [
    "contextMenus", "activeTab", "tabs"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://www.sitepoint.com/*",
        "http://www.sitepoint.com/*"
      ],
      "js": [
        "lib/jquery-2.1.1.min.js",
        "lib/jquery.datetimepicker.js",
        "lib/showdown.min.js",
        "scripts/utils/capitalize.js",
        "scripts/utils/modal.js",
        "scripts/utils/utilities.js",
        "scripts/modules/editorToolbar.js",
        "scripts/modules/titleArea.js",
        "scripts/modules/editorPane.js",
        "scripts/modules/publishWidget.js",
        "scripts/modules/tagsWidget.js",
        "scripts/modules/seriesWidget.js",
        "scripts/modules/syntaxHighlightingWidget.js",
        "scripts/modules/page.js",
        "scripts/main.js"
      ],
      "css": [
        "css/styles.css",
        "css/jquery.datetimepicker.css"
      ],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "options_page": "fancy-settings/source/index.html"
}
